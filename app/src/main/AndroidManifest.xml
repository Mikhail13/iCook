<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.mikhails.nanodegree.icook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icook"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="za.co.mikhails.nanodegree.icook.MainActivity"
            android:label="@string/app_label"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name="za.co.mikhails.nanodegree.icook.provider.AutocompleteSuggestionProvider"
            android:authorities="za.co.mikhails.nanodegree.icook.provider.autocomplete"
            android:enabled="true"
            android:exported="false"
            android:syncable="true" />
        <provider
            android:name="za.co.mikhails.nanodegree.icook.provider.RecipeContentProvider"
            android:authorities="za.co.mikhails.nanodegree.icook.provider.recipe"
            android:enabled="true"
            android:exported="false"
            android:syncable="true" />

        <service android:name="za.co.mikhails.nanodegree.icook.spoonacular.ICookDbAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service
            android:name="za.co.mikhails.nanodegree.icook.spoonacular.ICookDbSyncService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

        <activity
            android:name="za.co.mikhails.nanodegree.icook.AdvancedSearchActivity"
            android:label="@string/advanced_search_label"
            android:launchMode="singleTask"
            android:parentActivityName="za.co.mikhails.nanodegree.icook.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="za.co.mikhails.nanodegree.icook.AdvancedSearchResultActivity"
            android:label="@string/advanced_search_label"
            android:parentActivityName="za.co.mikhails.nanodegree.icook.AdvancedSearchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="za.co.mikhails.nanodegree.icook.AdvancedSearchActivity" />
        </activity>
        <activity
            android:name="za.co.mikhails.nanodegree.icook.RecipeDetailsActivity"
            android:label="@string/title_activity_recipe_details"
            android:parentActivityName="za.co.mikhails.nanodegree.icook.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="za.co.mikhails.nanodegree.icook.MainActivity" />
        </activity>
    </application>

</manifest>